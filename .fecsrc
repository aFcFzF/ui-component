{
    "files": [
        "src/**/*.js"
    ],
    "eslint": {
        "env": {
            "node": true,
            "browser": true
        },
        "rules": {
            "no-console": 0,
            "no-require": 0,
            "fecs-esnext-ext": ["js", "jsx", "es", "san", "vue"],
            "fecs-properties-quote": 0
        },
        "globals": {
            Box
        }
    },
    "htmlcs": {
        "max-len": 120,
        "tagname-lowercase": false,
        "tag-pair": false,
        "attr-lowercase": false,
        "nest": false,
        "img-alt": false,
        "img-width-height": false,
        "label-for-input": false,
        "button-type": false
    }
}
